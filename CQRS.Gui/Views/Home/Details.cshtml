@model CQRS.Simple.DTO.InventoryItemDetailsDto

@{
    ViewData["Title"] = "Details";
}

<div>
    <h2>Details:</h2>

    <div class="form-group">
        <label for="Id" class="control-label col-sm-3">Id:</label>
        <div class="col-sm-8">
            <input type="text" asp-for="Id" class="form-control" value="@Model.Id" readonly />
        </div>

        <label for="Name" class="control-label col-sm-3">Name:</label>
        <div class="col-sm-8">
            <input type="text" asp-for="Name" class="form-control" value="@Model.Name" readonly />
        </div>

        <label for="CurrentCount" class="control-label col-sm-3">Count:</label>
        <div class="col-sm-8">
            <input type="text" asp-for="CurrentCount" class="form-control" value="@Model.CurrentCount" readonly />
        </div>
    </div>

    <div class="form-group">
        @(Html.ActionLink("Rename","ChangeName", new{Id=Model.Id}))<br />
        @(Html.ActionLink("Deactivate","Deactivate",new{Id=Model.Id, Version=Model.Version}))<br />
        @(Html.ActionLink("Check in","CheckIn", new{Id=Model.Id}))<br />
        @(Html.ActionLink("Remove","Remove", new{Id=Model.Id,Version=Model.Version}))
    </div>

</div>